<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   app:layout_behavior="@string/appbar_scrolling_view_behavior"
>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/colorFondo"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0">

        <TextView
                android:id="@+id/tvNoticiaDetalleTitular"
                android:layout_width="400dp"
                android:layout_height="52dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:lines="3"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" android:text="@string/titular_noticia"/>

        <ImageView
                android:id="@+id/ivNoticiaDetalleImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNoticiaDetalleTitular"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

        <WebView
                android:id="@+id/wvNoticiaDetalleContenido"
                android:layout_width="match_parent"
                android:layout_height="551dp"
                android:layout_below="@id/ivNoticiaDetalleImagen"
                android:layout_marginTop="10dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabNoticiaDetalleIr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorAccent"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_view"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabNoticiaDetalleCompartir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="11dp"
                android:backgroundTint="@color/colorAccent"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_view" android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp" android:layout_marginEnd="335dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>